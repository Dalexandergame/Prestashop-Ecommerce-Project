<div class="card d-none" id="planning-delivery-block">
    <h3 class="card-header">
        {{ 'Planning Delivery'|trans({}, 'Admin.Actions') }}
    </h3>
    <div class="card-body">

        <form class="js-planning-delivery-form d-none">
            <div class="form-group row">
                <div class="col-3">
                    <span class="float-right">
                        {{ 'Delivery date'|trans({}, 'Admin.Orderscustomers.Feature') }}
                    </span>
                </div>
                <div class="col-4">
                    <input class="form-control" type="date" id="planning-delivery-date" name="planning-delivery-id">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <span class="float-right">
                        {{ 'Return date'|trans({}, 'Admin.Orderscustomers.Feature') }}
                    </span>
                </div>
                <div class="col-4">
                    <input class="form-control" type="date" id="planning-return-date" name="planning-delivery-id">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {#<a class="btn btn-primary" id="js-add-planning-delivery-btn" href="{{ path('admin_addresses_create', {'liteDisplaying': 1, 'submitFormAjax': 1}) }}">
                        {{ 'Save'|trans({}, 'Admin.Orderscustomers.Feature') }}
                    </a>#}
                    <button class="btn btn-primary" id="js-add-planning-delivery-btn">
                        {{ 'Save'|trans({}, 'Admin.Orderscustomers.Feature') }}
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
